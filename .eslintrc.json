{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "import-newlines"
    , "unused-imports"
    , "no-autofix"
    , "newline-destructuring"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "globalThis": false
    , "JSX":"readonly"
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        "max-lines": ["off"]
      }
    }
  ],
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 80,
        "ignorePattern": "\\s",
        "ignoreTemplateLiterals": true
      }
    ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "linebreak-style": [
      "warn",
      "unix"
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true,
        "mode": "strict"
      }
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "space-in-parens": [
      "error",
      "always",
      { "exceptions": [ "empty" ] }
    ],
    "array-bracket-spacing": [
      "error",
      "always"
    ],
    "computed-property-spacing": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "object-curly-newline": [
      "error",
      {
        //
        // Can enable these if we want to enforce multiline objects
        // 
        "ObjectExpression": {
          "multiline": true,
          "minProperties": 2,
          "consistent": true
        },
        "ObjectPattern": {
          "multiline": true,
          "minProperties": 2,
          "consistent": true
        },
        "ImportDeclaration": {
          "multiline": true,
          "minProperties": 2
        },
        "ExportDeclaration": {
          "multiline": true,
          "minProperties": 2
        }
      }
    ],
    "import-newlines/enforce": [
      "error",
      {
        "items": 1,
        "semi": false
      }
    ],
    "object-property-newline": "error",
    "prefer-template": "error",
    "template-curly-spacing": [
      "error",
      "always"
    ],
    "brace-style": [
      "warn",
      "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "strict": [
      "warn",
      "global"
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "semi": [
      "error",
      "always"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "semi-style": [
      "error",
      "last"
    ],
    "no-extra-semi": "error",
    "keyword-spacing": [
      "error",
      {
        "after": true
      }
    ],
    "comma-style": [
      "error",
      "first"
      , { "exceptions": 
      { "ImportDeclaration": false, "ObjectPattern": false } }
    ],
    "operator-linebreak": [
      "error",
      "before",
      {
        "overrides": {
          "?": "ignore",
          ":": "ignore"
        }
      }
    ],
    "space-infix-ops": "error",
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error",
    "block-spacing": [
      "error",
      "always"
    ],
    "max-lines": [
      "error", {
        "max": 750,
        "skipBlankLines": true,
        "skipComments": true
      }
    ],
    "jsx-quotes": [
      "error"
      , "prefer-single"
    ],
    "no-unneeded-ternary": "error",
    // using @typescript-eslint version of no-unused-vars instead
    // "no-unused-vars": "warn",
    "no-case-declarations": "off",
    "no-unsafe-finally": "off",
    "no-unreachable": "warn",
    "no-undef": "warn",
    "no-empty-pattern": "warn",
    "no-multiple-empty-lines": [ "error", { "max": 1, "maxBOF": 0, "maxEOF": 0 } ],
    "react/prop-types": 0,
    "react/jsx-tag-spacing": ["error", { "closingSlash": "never", "beforeSelfClosing": "always", "afterOpening": "never", "beforeClosing": "never" }],
    "react/jsx-curly-spacing": ["error", { "when": "always", "children": true }],
    "react/jsx-max-props-per-line": ["error", { "maximum": 1, "when": "always" }],
    "react/jsx-first-prop-new-line": ["error", "multiline"],
    "react/self-closing-comp": ["error", { "component": true, "html": true}],
    "react/jsx-wrap-multilines": ["error", {
      "declaration": "parens-new-line",
      "assignment": "parens-new-line",
      "return": "parens-new-line",
      "arrow": "parens-new-line",
      "condition": "parens-new-line",
      "logical": "parens-new-line",
      "prop": "parens-new-line"
    }],
    "react/jsx-closing-bracket-location": ["error", "tag-aligned"],
    "react/jsx-boolean-value": "error",
    "react/jsx-curly-brace-presence": ["error", { "props": "never", "children": "never" }],
    "@typescript-eslint/semi": "error",
    "@typescript-eslint/member-delimiter-style": "error",
    "@typescript-eslint/type-annotation-spacing": "error",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/ban-ts-comment": "warn",
    "@typescript-eslint/ban-types": "warn",
    "@typescript-eslint/no-empty-interface": "warn",
    "@typescript-eslint/no-empty-function": "warn",
    "no-autofix/unused-imports/no-unused-imports": "error",
    "newline-destructuring/newline": ["error", { "items": 1 }]
  }
}
